<!-- banner section start -->
<section class="banner_section banner_style2 mb-109">
    <div class="container-fluid">
        <div class="row">
            @if (banners != null)
            {
                var banner2_list = banners.Where(x => x.Position == "Banner2").OrderBy(x => x.Priority).ToList();
                foreach (var item in banner2_list)
                {
                    <div class="col-lg-6 col-md-6 col-sm-6">
                        <figure class="single_banner position-relative">
                            <img src="/images/banners/@item.ImageName" alt="@item.ImageName">
                            <div class="banner_text position-absolute">
                                <h3 class="title-color">@item.Title</h3>
                                <p class="subtitle-color">@item.SubTitle</p>
                                @if (!string.IsNullOrEmpty(item.Link))
                                {
                                    <a class="btn custom-btn" href="@item.Link">Shop Now</a>
                                }

                                <style>
                                    /* Başlık ve Alt Başlık Stilleri */
                                    .title-color {
                                        color: white;
                                    }

                                    .banner_text p.subtitle-color {
                                        color: whitesmoke;
                                    }

                                    /* Buton İçin Özel Stil */
                                    .custom-btn {
                                        margin-top:5px;
                                        background-color: #1F509A; /* Butonun arka plan rengi */
                                        color: white; /* Buton metin rengi */
                                        border: none; /* Buton kenarlığını kaldırır */
                                        padding: 10px 20px; /* Buton boyutunu ayarlar */
                                        border-radius: 5px; /* Yuvarlak kenarlar */
                                        text-decoration: none; /* Alt çizgiyi kaldırır */
                                    }

                                        .custom-btn:hover {
                                            margin-top: 5px;
                                            background-color: #D4EBF8; /* Hover durumu için farklı bir renk */
                                            color: #0A3981; /* Hover durumu için metin rengi */
                                        }
                                </style>
                            </div>
                        </figure>
                    </div>

                }
            }
            
            
        </div>
    </div>
</section>
<!-- banner section end -->
